DefaultErrorPage     ./www/Error.html


Server {
    Listen 80
    ServerName www.example.com
    MaxClients          100
    ErrorPage     z 70 ./www/Default/ServerError.html

    Location / {
        Root /www/Default
        Index index.html
        AutoIndex on
        Methods GET POST
        Redir /new-page
        ClientMaxBodySize   16000
    }

    Location / {
        Root /www/Default
        Index index.html
        AutoIndex on
        Methods GET POST
        Redir /new-page
    }
}

Server {
    Listen 80 90 99
    ServerName www.default.com 
    Host test

    Location / {
        Index index.html
        AutoIndex on
        Methods GET POST
        Redir /new-page
        DirList on
        Root /www
    }

    Location / {
        Root /wwww
        Index index.html
        AutoIndex on
        Methods GET POST
        Redir /new-page
        UpDir /Uploads
        ClientMaxBodySize 10
    }
}
